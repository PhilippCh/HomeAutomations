<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <OutputType>Exe</OutputType>
        <TargetFramework>net6.0</TargetFramework>
        <LangVersion>10.0</LangVersion>
        <Nullable>enable</Nullable>
        <RootNamespace>HomeAssistant.Automations</RootNamespace>
    </PropertyGroup>

    <ItemGroup>
        <None Update="appsettings.json">
            <CopyToOutputDirectory>Always</CopyToOutputDirectory>
        </None>
        <None Remove="core" />
        <None Update="appsettings.Development.json">
          <CopyToOutputDirectory>Always</CopyToOutputDirectory>
        </None>
    </ItemGroup>
    <ItemGroup>
        <None Include="apps\**\*.yaml" CopyToPublishDirectory="Always" />
    </ItemGroup>

    <ItemGroup>
        <Compile Remove="tests\**" />
    </ItemGroup>
    <ItemGroup>
        <PackageReference Include="Cronos" Version="0.7.1" />
        <PackageReference Include="GenHTTP.Core" Version="6.3.2" />
        <PackageReference Include="GenHTTP.Modules.Webservices" Version="6.3.2" />
        <PackageReference Include="Google.Apis.Calendar.v3" Version="1.55.0.2554" />
        <PackageReference Include="HttpTracer" Version="2.1.1" />
        <PackageReference Include="Ical.Net" Version="4.2.0" />
        <PackageReference Include="JetBrains.Annotations" Version="2021.3.0" />
        <PackageReference Include="JoySoftware.NetDaemon.App" Version="22.1.2" />
        <PackageReference Include="JoySoftware.NetDaemon.DaemonRunner" Version="22.1.2" />
        <PackageReference Include="JoySoftware.NetDaemon.Extensions.Mqtt" Version="22.5.2" />
        <PackageReference Include="JoySoftware.NetDaemon.HassModel" Version="22.1.2" />
        <PackageReference Include="JoySoftware.NetDaemon.Extensions.Scheduling" Version="22.1.2" />
        <PackageReference Include="Microsoft.Extensions.Hosting" Version="6.0.0" />
        <PackageReference Include="MQTTnet" Version="3.1.2" />
        <PackageReference Include="MQTTnet.Extensions.ManagedClient" Version="3.1.2" />
        <PackageReference Include="RestSharp" Version="107.0.3" />
        <PackageReference Include="Serilog.AspNetCore" Version="4.1.0" />
        <PackageReference Include="Staty" Version="2.1.3" />
        <PackageReference Include="System.Reactive" Version="5.0.0" />
    </ItemGroup>
    <ItemGroup>
      <Folder Include="Apps\Scales" />
    </ItemGroup>

	<Target Name="Generate HomeAssistant models" BeforeTargets="Build" Condition="'$(Configuration)' == 'Debug'">
		<Exec Command="nd-codegen -o .\Models\Generated\HomeAssistant.cs" WorkingDirectory="$(ProjectDir)" />
	</Target>


</Project>
