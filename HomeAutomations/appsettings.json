{
  "Logging": {
    "MinimumLevel": "debug"
  },
  "HomeAssistant": {
    "Host": "ha.pupslab.de",
    "Port": 443,
    "Ssl": true,
    "Token": "REMOVED"
  },
  "NetDaemon": {
    "AppSource": "./HomeAssistant.Automations.csproj",
    "GenerateEntities": true
  },
  "MQTT": {
    "Host": "mosquitto"
  },
  "HomeAutomations": {
    "Moonlight": {
      "Enabled": false
    },
    "Vacuum": {
      "Enabled": false,
      "Entity": "vacuum.fantenrussel",
      "CleaningSchedule": "00 12 * * 1,3,5",
      "ReminderIntervalMinutes": 60,
      "Notifications": {
        "Reminder": {
          "Tag": "vacuum",
          "Title": "Staubsauger",
          "Template": "Der Robo möchte saugen. Ist alles aufgeräumt?",
          "Service": "mobile_app_iphone_philipp",
          "Actions": [
            {
              "Action": "VACUUM_START_WITH_BEDROOM",
              "Title": "Erst Wohnung, dann Schlafzimmer",
              "Destructive": false
            },
            {
              "Action": "VACUUM_START",
              "Title": "Nur Wohnung",
              "Destructive": false
            },
            {
              "Action": "VACUUM_NO_START",
              "Title": "Heute nicht saugen",
              "Destructive": true
            }
          ]
        },
        "CleanBedroom": {
          "Tag": "vacuum",
          "Title": "Staubsauger",
          "Template": "Öffne die Schlafzimmertür und starte den Robo erneut.",
          "Service": "mobile_app_iphone_philipp",
          "Actions": []
        },
        "EmptyBin": {
          "Tag": "vacuum",
          "Title": "Staubsauger",
          "Template": "Bitte leere den Robo und schicke ihn zur Station zurück.",
          "Service": "mobile_app_iphone_philipp",
          "Actions": []
        }
      }
    },
    "KitchenLight": {
      "Enabled": true,
      "CycleTimeMinutes": 3,
      "MinIlluminanceLux": 25,
      "CombinedSensorTopic": "zigbee2mqtt/0x00158d0007bcae5d",
      "ManualTriggerSensorTopic": "zigbee2mqtt/0x00158d0006397c0f/action"
    },
    "TrashReminder": {
      "Enabled": true,
      "PersonalCalendar": "https://calendar.google.com/calendar/ical/d1c1afdj2u8m6u2b8fg09dgkhs%40group.calendar.google.com/private-2903d9f5f4dc181862f24afbb69871a9/basic.ics",
      "Calendar":{
        "BaseUrl": "https://www.abfallwirtschaft-germersheim.de/online-service/abfall-termine/abfalltermine-ics-export-bis-240-liter.html",
        "City": {
          "Id": "icsortschaft",
          "Value": "Neuburg"
        },
        "Types": {
          "Id": "icsabfallart[]",
          "Value": [
            "Bioabfall",
            "Gelber Sack",
            "Glasbox",
            "Papier",
            "Restmüll"
          ]
        }
      },
      "Sensors": {
        "Bioabfall": "trash_bio",
        "Gelber Sack": "trash_recycling",
        "Glasbox": "trash_glass",
        "Papier": "trash_paper",
        "Restmüll": "trash_waste"
      }
    },
    "WebhookServer": {
      "Enabled": true,
      "BaseUrl": "http://localhost:5050/"
    }
  }
}
