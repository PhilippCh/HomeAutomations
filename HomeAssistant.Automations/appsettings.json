{
  "Logging": {
    "MinimumLevel": "debug"
  },
  "HomeAssistant": {
    "Host": "ha.pupslab.de",
    "Port": 443,
    "Ssl": true,
    "Token": "REMOVED"
  },
  "NetDaemon": {
    "AppSource": "./HomeAssistant.Automations.csproj",
    "GenerateEntities": true
  },
  "MQTT": {
    "Host": "localhost"
  },
  "HomeAssistant.Automations": {
    "Moonlight": {
      "Enabled": false
    },
    "Vacuum": {
      "Enabled": false,
      "Entity": "vacuum.fantenrussel",
      "CleaningSchedule": "00 12 * * 1,3,5",
      "ReminderIntervalMinutes": 60,
      "Notifications": {
        "Reminder": {
          "Tag": "vacuum",
          "Title": "Staubsauger",
          "Template": "Der Robo möchte saugen. Ist alles aufgeräumt?",
          "Service": "mobile_app_iphone_philipp",
          "Actions": [
            {
              "Action": "VACUUM_START_WITH_BEDROOM",
              "Title": "Erst Wohnung, dann Schlafzimmer",
              "Destructive": false
            },
            {
              "Action": "VACUUM_START",
              "Title": "Nur Wohnung",
              "Destructive": false
            },
            {
              "Action": "VACUUM_NO_START",
              "Title": "Heute nicht saugen",
              "Destructive": true
            }
          ]
        },
        "CleanBedroom": {
          "Tag": "vacuum",
          "Title": "Staubsauger",
          "Template": "Öffne die Schlafzimmertür und starte den Robo erneut.",
          "Service": "mobile_app_iphone_philipp",
          "Actions": []
        },
        "EmptyBin": {
          "Tag": "vacuum",
          "Title": "Staubsauger",
          "Template": "Bitte leere den Robo und schicke ihn zur Station zurück.",
          "Service": "mobile_app_iphone_philipp",
          "Actions": []
        }
      }
    },
    "KitchenLight": {
      "Enabled": true,
      "CycleTimeMinutes": 3,
      "MinIlluminanceLux": 25,
      "MotionSensor": {
        "Host": "192.168.188.80",
        "ThrottleAfterWakeSeconds": 30
      },
      "LightSensorTopic": "zigbee2mqtt/0x54ef441000035f82",
      "ManualTriggerSensorTopic": "zigbee2mqtt/0x00158d0006397c0f/action"
    }
  }
}
