{
  "Logging": {
    "LogLevel": {
      "Default": "Debug",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "HomeAssistant": {
    "Host": "ha.pupslab.de",
    "Port": 443,
    "Ssl": true,
    "Token": "REMOVED"
  },
  "NetDaemon": {
    "AppSource": "./HomeAssistant.Automations.csproj",
    "GenerateEntities": true
  },
  "HomeAssistant.Automations": {
    "Vacuum": {
      "CleaningSchedule": "00 12 * * 1,3,5",
      "ReminderIntervalMinutes": 60,
      "Reminder": {
        "Tag": "vacuum",
        "Title": "Saugen?",
        "Template": "Der Robo möchte saugen. Ist alles aufgeräumt?",
        "Actions": [
          {
            "Action": "VACUUM_START_WITH_BEDROOM",
            "Title": "Erst Wohnung, dann Schlafzimmer",
            "Destructive": false
          },
          {
            "Action": "VACUUM_START",
            "Title": "Nur Wohnung",
            "Destructive": false
          },
          {
            "Action": "VACUUM_NO_START",
            "Title": "Heute nicht saugen",
            "Destructive": true
          }
        ]
      }
    }
  }
}
